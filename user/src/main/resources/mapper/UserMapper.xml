<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boon.user.mapper.UserMapper">
    <resultMap id="user" type="com.boon.pojo.User">
        <id property="sno" column="sno"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="phone" column="phone"/>
        <result property="gender" column="gender"/>
        <result property="birthday" column="birthday"/>
        <result property="qq" column="qq"/>
        <result property="picture" column="picture"/>
        <result property="signature" column="signature"/>
        <result property="state" column="state"/>
        <result property="del" column="del"/>
    </resultMap>
    <insert id="addUser" parameterType="com.boon.pojo.User">
        insert into user values(#{sno},#{name},#{password},#{phone},#{gender}, UNIX_TIMESTAMP(#{birthday}),#{qq},
        #{picture},#{signature},#{state},#{del})
    </insert>
    <update id="updateUser">
        update user
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="gender != null and gender != ''">
                gender = #{gender},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="qq != null and qq != ''">
                qq = #{qq},
            </if>
            <if test="picture != null and picture != ''">
                picture = #{picture},
            </if>
            <if test="signature != null and signature != ''">
                signature = #{signature},
            </if>
            <if test="state != null and state != ''">
                state = #{state},
            </if>
            <if test="del != null and del != ''">
                del = #{del},
            </if>
        </set>
        where sno = #{sno}
    </update>

    <select id="findAll" resultMap="user">
        select * from user where state = 1 and del = 0
    </select>
    <select id="findBySno" resultMap="user">
        select * from user where del = 0 and sno = #{sno}
    </select>
</mapper>